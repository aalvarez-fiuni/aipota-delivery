      <div class="container">
        <div class="row">
          <div class="col-2"></div>
          <div class="col-4 text-center">1. Elige un negocio</div>
          <div class="col-4 text-center"><%=image_tag("elige_negocio.png", size: "80x80", alt: "Edit Entry")%></div>
