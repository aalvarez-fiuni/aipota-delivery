          <div class="col-4 text-center"><%=image_tag("realiza_delivery.png", size: "80x80", alt: "Edit Entry")%></div>
          <div class="col-4"></div>
        </div>
        <br><br>
      </div>

      <button type="button" class="btn my-button text-white">Ingresar</button>

