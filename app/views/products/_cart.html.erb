<div class="modal fade" id="cart-modal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" id="cart-modal-content">
      <div class="modal-header">
        <div class="container">
          <div class="row">
            <div class="col">
              <h5 class="text-blue text-center">Carrito</h5>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row mb-2">
            <div class="col-12">
              <div class="table-responsive">
                <table class="table table-hover table-borderless">
                  <thead id="cart-table-head">
                  <tr>
                    <th scope="col">Productos</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Precio</th>
                    <th scope="col"></th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @cart.cart_items.each do |ci| %>
                    <tr>
                      <th scope="col" class="text-left"><%= ci.product.description %></th>
                      <td class="text-center"><%= ci.quantity %></td>
                      <td class="text-center"><%= ci.quantity * ci.product.price %></td>
                      <td>
                        <button class="btn btn-sm btn-outline-danger bi bi-trash"></button>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col-12 mb-2">
              <div class="card">
                <div class="card-body py-2">
                  <div class="container">
                    <div class="row">
                      <div class="col-8">Presupuesto M&aacute;ximo</div>
                      <div class="col-4">25.000 Gs.</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-12 mt-2">
              <div class="card card-border-blue">
                <div class="card-body py-3">
                  <div class="container">
                    <div class="row text-blue font-weight-bold">
                      <div class="col-8">Total</div>
                      <div class="col-4">15.000 Gs.</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row mt-4">
            <div class="container text-right">
              <button type="button" class="btn my-button-primary text-color-secondary mx-1">Vaciar</button>
              <button type="button" class="btn btn-aipota-primary my-button-primary text-white mx-1">Comprar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>