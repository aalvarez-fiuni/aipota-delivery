<div class="container">
  <%= form_for_filterrific(@filterrific, url: products_path) do |f| %>
    <form>
      <div class="row">
        <div class="col-9 col-md-6 col-lg-8 px-0">
          <%= f.text_field :search_query, class: 'form-control', placeholder: 'Busca un producto',
                           id: 'main-search-input' %>
          <%= f.hidden_field :supermarket_id, value: supermarket.id %>
          <% last_checked.each do |category| %>
            <%= f.hidden_field :with_category, :multiple => true, :value => category %>
          <% end %>
        </div>
        <div class="col-2 col-md-1 col-lg-1 px-0">
          <%= button_tag class: "btn btn-block btn-aipota-primary text-white", id: "main-search-button" do %>
            <i class="bi bi-search"></i>
          <% end %>
        </div>
      </div>
    </form>
  <% end %>
</div>
