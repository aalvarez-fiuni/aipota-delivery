<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-4">
      <div class="form-group">
        <label>Descripcion:</label>
        <%= form.text_field :description, class: "form-control", required: "required" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
      <div class="form-group">
        <label>Precio:</label>
        <%= form.number_field :price, class: "form-control", required: "required" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
      <div class="form-group">
        <label>Categoria:</label>
        <%= form.text_field :category, class: "form-control", required: "required" %>
      </div>
    </div>
  </div>

  <div>
    <%= form.submit 'Guardar', class: "btn btn-success" %>
    <%= link_to 'Atras', products_path %>
  </div>
<% end %>
