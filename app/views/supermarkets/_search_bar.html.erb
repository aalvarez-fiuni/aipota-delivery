<div class="jumbotron bg-transparent my-0 py-3 py-lg-5">
  <div class="container">
    <%= form_for_filterrific(@filterrific, url: supermarkets_search_path) do |f| %>
      <form>
        <div class="row justify-content-center">
          <div class="col-8 col-md-6 col-lg-8 px-0">
            <%= f.text_field :search_query, class: 'form-control', placeholder: 'Busca un super',
                             id: 'main-search-input' %>
          </div>
          <div class="col-2 col-md-1 col-lg-1 px-0">
            <a class="btn btn-block btn-aipota-primary text-white" id="main-search-button" type="submit">
              <i class="bi bi-search"></i>
            </a>
          </div>
        </div>
      </form>
    <% end %>
  </div>
</div>