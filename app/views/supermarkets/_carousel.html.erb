

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>

<div>
  <section class="pt-5">
    <div class="container-fluid">
      <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
          <h2 class="text-blue font-title">Mas Visitados</h2>
          <hr>
        </div>
      </div>
      <div id="most_visited" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
          <li data-target="#demo" data-slide-to="0" class="active"></li>
          <li data-target="#demo" data-slide-to="1"></li>
          <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
          <% i = 0 #each_with_index %>
          <% Supermarket.first(3).each do |smk| %>
            <div class="carousel-item <% if (i == 0) %>active<% end %>">
              <% i = i + 1 %>
              <div class="row">
                <div class="col-3 col-sm-0"></div>
                <div class="col-12 col-sm-6 mb-2 mb-sm-4">
                  <div class="card py-0 py-sm-4">
                    <div class="card-body py-2">
                      <div class="container">
                        <div class="row">
                          <div class="col-4 col-sm-3 p-2 text-black-50">
                            <%= image_tag smk.image, class: 'img-fluid' %>
                          </div>
                          <div class="col-8 col-sm-9 pb-5">
                            <%= link_to smk.name, products_path,
                                        :class => 'h5 card-title stretched-link',
                                        :style => 'text-decoration: none' %>
                            <p class="card-text"><%= smk.direction %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-3 col-sm-0"></div>
              </div>
            </div>

          <% end %>
        </div>
        <a class="carousel-control-prev" href="#most_visited" data-slide="prev" role="button">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#most_visited" data-slide="next" role="button">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
      </div>
    </div>
  </section>

  <section class="pt-5">
    <div class="container-fluid">
      <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
          <h2 class="text-blue font-title">Ofertas</h2>
          <hr>
        </div>
      </div>
      <div id="with_offer" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
          <li data-target="#demo" data-slide-to="0" class="active"></li>
          <li data-target="#demo" data-slide-to="1"></li>
          <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
          <% i = 0 #each_with_index %>
          <% Supermarket.last(3).each do |smk| %>
            <div class="carousel-item <% if (i == 0) %>active<% end %>">
              <% i = i + 1 %>
              <div class="row">
                <div class="col-3 col-sm-0"></div>
                <div class="col-12 col-sm-6 mb-2 mb-sm-4">
                  <div class="card py-0 py-sm-4">
                    <div class="card-body py-2">
                      <div class="container">
                        <div class="row">
                          <div class="col-4 col-sm-3 p-2 text-black-50">
                            <%= image_tag smk.image, class: 'img-fluid' %>
                          </div>
                          <div class="col-8 col-sm-9 pb-5">
                            <%= link_to smk.name, products_path,
                                                                 :class => 'h5 card-title stretched-link',
                                                                 :style => 'text-decoration: none' %>
                            <p class="card-text"><%= smk.direction %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-3 col-sm-0"></div>
              </div>
            </div>

          <% end %>
        </div>
        <a class="carousel-control-prev" href="#with_offer" data-slide="prev" role="button">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#with_offer" data-slide="next" role="button">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
      </div>
    </div>
  </section>

</div>
