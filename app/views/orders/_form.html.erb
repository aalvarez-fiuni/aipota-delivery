<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script>
      document.addEventListener("DOMContentLoaded", initMap2);
  </script>
<% end %>

<%= form_with(model: order, local: true) do |form| %>
  <div class="form-group row justify-content-center">
    <label class="col-5 col-sm-2 text-left">Nombre y Apellido</label>
    <div class="col col-sm-4">
      <%= form.text_field :user, class: "form-control", required: "required" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label class="col-5 col-sm-2 text-left">Ubicación</label>
    <!--div class="col col-sm-4">
      <input type="text" class="form-control">
    </div-->

    <div class="input-group col col-sm-4">
      <!--input type="text" class="form-control number-format"-->
      <%= form.text_field :location ,class: "form-control", required: "required" %>
      <div class="input-group-append">
        <%= link_to orders_map_path, {
          remote: true,
          class: 'btn btn-sm'
        } do %>
          <i class="bi bi-geo-alt text-blue"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label class="col-5 col-sm-2 text-left">Latitud</label>
    <div class="col col-sm-4">
      <%= form.text_field :latitude ,class: "form-control" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label class="col-5 col-sm-2 text-left">Longitud</label>
    <div class="col col-sm-4">
      <%= form.text_field :longitude ,class: "form-control" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label class="col-5 col-sm-2 text-left">RUC</label>
    <div class="col col-sm-4">
      <input type="text" class="form-control">
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label class="col-5 col-sm-2 text-left">Teléfono</label>
    <div class="col col-sm-4">
      <input type="text" class="form-control">
    </div>
  </div>

  <p>
    <div id="map2"></div>
  </p>

  <div class="row justify-content-end pt-4">
    <div class="col-auto">
      <button type="button" class="btn my-button-primary text-color-secondary mx-1" data-dismiss="modal">Cancelar</button>
      <%= form.submit 'Comprar', class: "btn btn-aipota-primary my-button-primary text-white mx-1" %>
    </div>
  </div>

<%end %>

<div id="map-modal-content"></div>