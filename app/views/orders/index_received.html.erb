<div class="container-fluid">
  <%= render partial: "welcome/navbar" %>
</div>

<div class="my-background">
  <!--PADDING PARA QUE EL CONTENIDO NO SE OCULTE DEBAJO DEL NAVBAR-->
  <div class="mt-5 pt-5 mt-sm-5 pt-sm-5 container text-center">
    <div class="container">
      <div class="row">
        <div class="col-8 col-sm-10">
          <h5 class="text-blue d-block d-lg-none text-left pt-3">Compras realizadas</h5>
          <h2 class="text-blue d-none d-lg-block text-left pt-3">Compras realizadas</h2>
        </div>
        <div class="col-4 col-sm-2 mt-3">
          <%= link_to orders_filter_path(), { remote: true } do %>
            <button class="btn btn-aipota-primary text-white">Filtrar</button>
          <% end %>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <table class="table table-sm">
          <thead>
          <tr>
            <th scope="col">Fecha</th>
            <th scope="col">Negocio</th>
            <th scope="col">Total</th>
            <th scope="col"></th>
          </tr>
          </thead>
          <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="pt-4"><%= order.order_date.strftime("%d-%m-%Y") %></td>
              <td class="pt-4"><%= order.supermarket_name %></td>
              <td class="pt-4"><%= order.total %> Gs.</td>
            </tr>
          <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div id="filter-modal-content"></div>