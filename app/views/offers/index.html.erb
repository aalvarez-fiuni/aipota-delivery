<p id="notice"><%= notice %></p>

<h1>Lista de Ofertas</h1>

<table class="table">
  <thead>
  <tr>
    <th>Supermercado</th>
    <th>Descripcion</th>
    <th>Descuento</th>
    <th>Desde</th>
    <th>Hasta</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @offers.each do |offer| %>
    <tr>
      <td><%= offer.supermarket_name %></td>
      <td><%= offer.description %></td>
      <td><%= offer.discount %></td>
      <td><%= offer.start_date %></td>
      <td><%= offer.end_date %></td>
      <td><%= link_to 'Ver', offer %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to new_offer_path do %>
  <button class="btn btn-info">Nueva Oferta</button>
<% end %>